<div class="form-actions">
  <h4>Use the form below to add your location to the map so that hungry people can find you.</h4>

  <%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :location, "Street Address" %>
    <%= f.text_field :location %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

  </div>

  <div class="actions">
    <%= button_to 'Add Location', edit_user_path, method: :patch %>
  </div>
  <% end %>
