<div class="admin-index">
  <h2 id="admin">Active Users List</h2>
  <ul id="users-list">
    <% @users.each do |user| %>
      <li class="user-link">
        <% if user.role == 'user' %>
        <%= "Pending Approval" %>
        <%= link_to user.email, user %>
        <% else %>
        <%= "Approved" %>
        <%= link_to user.email, user %>
      </li>
      <% end %>
    <% end %>
  </ul>
  <%= button_to 'Home', root_path, method: :get %>
</div>
